<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crowd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <include
        android:id="@+id/app_bar_crowd"
        style="@style/AppTheme"
        layout="@layout/app_bar_crowd"
        android:background="@color/translucent"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/tw__composer_red"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:dividerHeight="4dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/msg_view"
        android:background="@color/cast_expanded_controller_seek_bar_progress_background_tint_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/common_google_signin_btn_text_dark_default">


    <EditText
        android:id="@+id/crowd_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/hint_message"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_message"
        android:id="@+id/send_button"/>

    </LinearLayout>


</LinearLayout>
